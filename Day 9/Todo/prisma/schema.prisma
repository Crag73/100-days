generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role   @default(USER)
}

model ToDo {
  id        Int     @id @default(autoincrement())
  desc      String
  completed Boolean @default(false)
}

enum Role {
  USER
  ADMIN
}
